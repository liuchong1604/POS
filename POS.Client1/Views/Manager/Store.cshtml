
@{
    Layout = null;
    ViewBag.Title = "Store";
}

<head>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/Model/Store.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/Model/Table.css" type="text/css" rel="stylesheet" />

</head>
<body>
    <div class="Search_Div">
        <input id="Search_Box" class="Search_Box" placeholder="请输入搜索内容" />
        <button id="SearchButton" class="Search_Button">搜索</button>
        <button id="AddButton" data-toggle="modal" data-target="#myModal" style="position:absolute;right:50px;top:50px">添加</button>
    </div>
    <div class="Content_Div">
        <table id="StoreTable" class="table-hover">
            <tr>
                <th class="th-1">编号</th>
                <th class="th-2">名称</th>
                <th class="th-3">操作</th>
            </tr>
        </table>
    </div>
    <!--模态框-->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel">
                        模态框（modal）标题
                    </h4>
                </div>
                <div class="modal-body">

                    <form class="form-horizontal" role="form">
                        <div class="form-group">
                            <label for="firstname" class="col-sm-2 control-label">商店名</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="StoreName"
                                       placeholder="请输入商店名">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="lastname" class="col-sm-2 control-label">商店地址</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="StoreAddress"
                                       placeholder="请输入商店地址">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="lastname" class="col-sm-2 control-label">管理员ID</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="StoreManager"
                                       placeholder="请输入管理员Id">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="lastname" class="col-sm-2 control-label">关联仓库ID</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="StoreWarehouse"
                                       placeholder="请输入关联仓库Id">
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                    <button id="CommitButton" type="button" class="btn btn-primary" data-dismiss="modal">提交</button>
                </div>
            </div>
        </div>
    </div>
    <!---->
</body>