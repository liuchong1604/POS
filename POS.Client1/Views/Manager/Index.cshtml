
@{
    Layout = null;
    ViewBag.Title = "Index";
}
<head>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/Model/Manager.css" type="text/css" rel="stylesheet"/>

</head>
<body>
    <!--顶部工具栏-->
    <div class="top-head">
        <div id="title">后台管理系统</div>
    </div>
    <!--侧边工具栏-->
    <div class="left-menu" style="background:#ddd">
        <ul class="nav nav-pills nav-stacked">
            <li role="presentation" id="bar-1">
                <a href="#bar_1" class="nav-header collapsed" data-toggle="collapse" id="Store"
                   onclick="chevron_toggle()">商店管理<span class="pull-right glyphicon glyphicon-chevron-down"></span></a>

                <ul id="bar_1" class="nav nav-list collapse">
                    <li><a id="StoreManager" href="~/Manager/Store" target="myFrame">门店管理</a></li>
                    <li><a id="PriceManager" href="#">商品售价管理</a></li>
                </ul>
            </li>
            <li role="presentation" id="bar-2">
                <a href="#bar_2" class="nav-header collapsed" data-toggle="collapse" id="Warehouse"
                   onclick="chevron_toggle()">仓库管理<span class="pull-right glyphicon glyphicon-chevron-down"></span></a>

                <ul id="bar_2" class="nav nav-list collapse">
                    <li><a id="WarehouseManager" href="~/Manager/GetStore" target="myFrame">仓库管理</a></li>
                    <li><a id="StackManager" href="#">库存管理</a></li>
                    <li><a id="StackManager" href="#">商品种类管理</a></li>
                </ul>
            </li>
            <li role="presentation" id="bar-3"><a href="#">明细报表</a></li>
        </ul>
    </div>
    <!--中部内容栏-->
    <div class="right-content">
        <iframe style="width:100%;height:100%" name="myFrame" id="myFrame">

        </iframe>
    </div>

    <script>
        function chevron_toggle() {
            $("#collapseParent").find("span").toggleClass("glyphicon-chevron-up");
            $("#collapseParent").find("span").toggleClass("glyphicon-chevron-down");
        }
    </script>
</body>

